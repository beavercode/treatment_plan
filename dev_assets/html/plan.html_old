                        <!-- /navbar-collapse -->
                    </div>
                </nav>
            </header>
            <!-- /header -->

            <!-- Plan form -->
            <form class="form-horizontal form" role="form" name="plan" action="" method="post">
                <!-- Common info -->
                <div class="form-group col-sm-7">
                    <label for="inputName" class="col-sm-4 control-label">Введите имя</label>

                    <div class="col-sm-8">
                        <input type="text" id="inputName" class="form-control" name="inputName"
                               placeholder="Фамилия Имя Отчество">
                    </div>
                </div>
                <div class="form-group col-sm-5">
                    <label for="inputDoctor" class="col-sm-4 control-label">Врач</label>

                    <div class="col-sm-8">
                        <select id="inputDoctor" class="selectpicker show-tick" name="inputDoctor" data-width="100%">
                            <option value="1">Катаева В.</option>
                            <option value="2">Петров И.</option>
                            <option value="3">Ильф И.</option>
                        </select>
                    </div>
                </div>
                <!-- /Common info -->

                <!-- Title -->
                <div class="form-group col-sm-12">
                    <hr/>
                    <h3 class="title">Введите этапы</h3>
                </div>
                <!-- /Title -->

                <!-- Permanent stage -->
                <div id="stage">
                    <div class="form-group col-sm-5">
                        <label for="inputStage" class="col-sm-4 control-label">Название</label>

                        <div class="col-sm-8">
                            <select id="inputStage" class="selectpicker show-tick" name="inputStage" data-width="100%">
                                <option value="1">Имплантация</option>
                                <option value="2">Ортодонтия</option>
                                <option value="3">Отбеливание</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group col-sm-5">
                        <label for="inputPeriod" class="col-sm-4 control-label">Период</label>

                        <div class="col-sm-8">
                            <input type="text" id="inputPeriod" class="form-control" name="inputPeriod"
                                   placeholder="Длительность лечения">
                        </div>
                    </div>
                    <div class="form-group col-sm-2">
                        <div class="col-sm-12">
                            <!--todo: interactive upload-->
                            <input type="file" id="inputFile" class="btn btn-default" name="inputFile">
                        </div>
                    </div>
                </div>
                <!-- /Permanent stage  -->

                <!-- Additional stages -->
                <div id="stages">

                </div>
                <!-- /Additional stages -->

                <!-- Add/Remove stage -->
                <div class="form-group col-sm-10 col-sm-offset-2">
                    <a href="#add-stage" id="add-stage" class="btn btn-primary" role="button">Добавить этап</a>
                    <a href="#remove-stage" id="remove-stage" class="btn btn-danger" role="button">Удалить
                        этап</a>
                </div>
                <!-- /Add/Remove stage -->

                <!-- Save plan -->
                <div class="form-group col-sm-10 col-sm-offset-2">
                    <button type="submit" class="btn btn-success btn-lg">Сохранить план лечения</button>
                </div>
                <!-- /Save plan -->
            </form>
            <!-- /Plan form -->
        </div>
    </div>
</div>
<script src="../assets/js/app.min.js"></script>
